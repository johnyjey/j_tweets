<div class="row">
    <div class="col-md-12">
        <div class="d-flex justify-content-between align-items-center">
            <h1>Tweets</h1>
            <hr/>
            <% if Current.user.twitter_accounts.any? %>
                <%= link_to "Schedule a Tweet", new_tweet_path, class: "btn btn-primary" %>
            <% end %>
            
            <% if Current.user.twitter_accounts.none? %>
                <%= link_to "Connect your Twitter Account", "/auth/twitter", method: :post,class: "btn btn-success" %>
            <% end %>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <%= render @tweets %>
    </div>
</div>
 