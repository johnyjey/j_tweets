<% if form.object.errors.any?%>        
    <div class="row">
        <div class="col-md-12">                        
            <div class="alert alert-danger"> 
                <% form.object.errors.full_messages.each do |message| %>
                    <div><%= message %></div>
                <% end %>
            </div>
        </div>
    </div>
<% end %>