 
    <div class="card card-info">
        <div class="card-header">
            Profile from shared folder
        </div>
        <div class="card-body"> 
            <table class="table table-borderedr">
                <tr>
                    <td> 
                        <img src="../../assets/images/profile.jpg" class="img img-responsive rounded center" width="125px" height="150px"/>
                    </td>
                
                    <td  style="width:100%;height:100%;">
                        <table class="table" style="width:100%;height:100%;">
                            <tr>
                                <td>Name</td>
                                <td class="text-info">
                                    <% if @user %>
                                        <%= @user.name %>
                                    <% end %>
                                </td>
                            </tr>
                            <tr>
                                <td>Email</td>
                                <td class="text-info">
                                    <% if @user %>
                                        <%= @user.email %>
                                    <% end %></td>
                            </tr>
                            <tr>
                                <td>Country</td>
                                <td class="text-info">India</td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>
        </div>
    </div> 