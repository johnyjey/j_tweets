 
    <div class="card card-info">
        
        <%# Assign Current.User to variable  %>
        <% if Current.user%>        
            <% @user=Current.user %>
            <div class="card-header">
                Profile from shared folder
            </div>
            <div class="card-body"> 
                <table class="table table-borderedr">
                    <tr>
                        <td> 
                            <img src="../../assets/images/profile.jpg" class="img img-responsive rounded center" width="100px" height="125px"/>
                        </td>
                    
                        <td  style="width:100%;height:100%;">
                            <table class="table" style="width:100%;height:100%;">
                                <tr>
                                    <td>Name</td>
                                    <td class="text-info">
                                        <% if @user %>
                                            <%= @user.name %>
                                        <% end %>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Email</td>
                                    <td class="text-info">
                                        <% if @user %>
                                            <%= @user.email %>
                                        <% end %></td>
                                </tr>
                                <tr>
                                    <td>Country</td>
                                    <td class="text-info">India</td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
            </div>
        <% else %>
            
            <div class="card-header bg-danger text-warning">
                Please Login
            </div>
            <center><h1 class="text-info">Please login <br/>to watch updates</h1></center>
        <% end %>
    </div> 